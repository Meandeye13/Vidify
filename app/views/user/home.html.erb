<section class='recommendations'>
	<h2>Recommendations:</h2>
	<% @recommendedVideos.each do |videoSrc| %>
	<div class='recommendedVideo'>
		<embed type="application/x-shockwave-flash" src="<%= videoSrc[:src_url] %>" width="250" height="130" style="display: block;" quality="high" scale="scale" allowfullscreen="true" allowscriptaccess="never" salign="tl" wmode="opaque" flashvars="width=250&amp;height=130">
	</div>
	<% end %>
</section>

<section class='recentVideos'>
	<div id="galleria">
		<% @recentVideos.each_pair do |name, url| %>
		<a href="<%= url  %>"><span class="video" data-description="Posted by: <%= name %>"></span></a>
		<% end %>
	</div><!-- End galleria -->

	<script>
    	Galleria.loadTheme('assets/galleria.classic.js');
	    $('#galleria').galleria({
        clicknext: 'false',
        width:700,
        height:400,
        transition: 'fadeslide',
        thumbCrop: 'height',
        youtube: { height: '330px', width: '330px' }
    });
	    $("iframe",top.document).height(280);
	    $("iframe",top.document).width(420);
	</script>
	<!--<div class="fb-comments" data-href="http://apps.facebook.com/ronvidify/" data-num-posts="3" data-width="470"></div>-->
</section>